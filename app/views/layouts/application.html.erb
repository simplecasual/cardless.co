<!doctype html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <%= metamagic title: "Cardless", description: "Throw business cards out the window." %>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <link href="http://d2v52k3cl9vedd.cloudfront.net/basscss/6.1.6/basscss.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="//cloud.typography.com/6326032/647188/css/fonts.css" />
    <style>
      body, .regular, input {
        font-family: 'Ideal Sans SSm A', 'Ideal Sans SSm B'; font-weight: 300; font-style: normal;
      }
      h1,h2,h3,h4,h5,h6, .bold, label {
        font-family: 'Ideal Sans SSm A', 'Ideal Sans SSm B'; font-weight: 500; font-style: normal;
      }
      .separator {
        display:block;
        border:none;
        color:white;
        height:1px;
        background:black;
        background: -webkit-gradient(radial, 50% 50%, 0, 50% 50%, 350,
        from(rgba(0,0,0,.11)), to(#fff));
      }
    </style>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <div class="flex flex-column" style="min-height:100vh">
      <header>
        <nav class="clearfix white bg-black">
          <div class="sm-col">
            <%= link_to("Cardless", root_path, class: "button py2 button-transparent")  %>
          </div>
          <div class="sm-col-right">
            <% if user_signed_in? %>
              <%= link_to("Show Profile", user_path(current_user), class: "button py2 button-transparent regular")  %>
              <%= link_to("Edit Account", edit_user_registration_path, class: "button py2 button-transparent regular")  %>
            <% else %>
              <%= link_to("Login", new_user_session_path, class: "button py2 button-transparent regular")  %>
            <% end %>
          </div>
        </nav>
      </header>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <main class="flex flex-auto flex-center">
        <div class="px2 mx-auto">
          <%= yield %>
        </div>
      </main>
      <footer class="p2 center">
        <p class="light-gray">&copy; <%= Time.now.year %> Simple Casual LLC. All rights reserved.</p>
      </footer>
    </div>

    <script>
      (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
                                                              function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
      e=o.createElement(i);r=o.getElementsByTagName(i)[0];
      e.src='https://www.google-analytics.com/analytics.js';
      r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
      ga('create','UA-XXXXX-X','auto');ga('send','pageview');
    </script>
  </body>
</html>
